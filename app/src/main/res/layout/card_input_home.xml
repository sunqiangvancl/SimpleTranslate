<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_bg"
    android:orientation="vertical"
    android:padding="10dp">


    <EditText
        android:id="@+id/et_trans_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="@string/hint_et_pleaseInput"
        android:maxLines="6"
        android:minLines="3"
        android:padding="5dp"
        android:textColor="@color/black"
        android:textColorHint="@color/deep_gray"
        android:textSize="22sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:padding="5dp">

        <ImageView
            android:id="@+id/iv_camera_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:contentDescription="@string/conDes_logo"
            android:src="@drawable/ic_camera_black"/>

        <ImageView
            android:id="@+id/iv_camera_voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/conDes_logo"
            android:src="@drawable/ic_voice_black"/>


        <ImageView
            android:id="@+id/iv_hand_writing_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:contentDescription="@string/conDes_logo"
            android:src="@drawable/ic_handwriting_black"/>
    </RelativeLayout>
</LinearLayout>

