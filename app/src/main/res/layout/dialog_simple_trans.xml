<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/light_240"
              android:orientation="vertical"
              android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_setting_dialog_simple"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:alpha="@integer/alpha_menu_icon"
            android:src="@drawable/ic_settings_black_24"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="20sp"/>

        <ImageView
            android:id="@+id/iv_close_dialog_simple"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:alpha="@integer/alpha_menu_icon"
            android:src="@drawable/ic_close_black_24"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_read_from_dialog_simple"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_play_audio"/>

        <Spinner
            android:id="@+id/sp_from_dialog_simple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"/>
    </LinearLayout>


    <EditText
        android:id="@+id/et_from_word_dialog_simple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:maxLines="5"
        android:padding="10dp"
        android:text="翻以前的文本"
        android:textColor="@color/black"
        android:textSize="18sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="@color/light_gray"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_read_to_dialog_simple"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_play_audio"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_read_to_dialog_simple">

            <Spinner
                android:id="@+id/sp_to_dialog_simple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"                />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_more_dialog_simple"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_more_vert_grey600_24"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_to_word_dialog_simple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="5"
        android:scrollbars="vertical"
        android:padding="10dp"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/btn_new_trans_dialog_simple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:backgroundTint="@color/colorPrimaryDark"
        android:minHeight="15dp"
        android:minWidth="15dp"
        android:text="@string/new_trans"
        android:textColor="@color/white"/>

</LinearLayout>